<%= form_with model: @book, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>

  <%= render partial: 'authors', locals: { title: 'Author Name', authors: @authors, f: form } %>

  <p>
    <%= form.submit %>
  </p>
<% end %>
